
<?xml version="1.0" ?>
<robot name="black_donut">


    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

  <!-- Define the main body of the robot -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.2"/>
      </geometry>
    <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.2" radius="0.2"/>
      </geometry>
    </collision>
  </link>

  <!-- Define the left wheel -->
  <link name="left_wheel">
    <visual>
      <geometry>
         <cylinder length="0.05" radius="0.05"/>
      </geometry>
        <material name="orange"/>
    </visual>
    <collision>
      <geometry>
         <cylinder length="0.05" radius="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Define the right wheel -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
        <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Define the caster wheels -->
  <link name="caster_front">
    <visual>
      <geometry>
        <sphere  radius="0.04"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <sphere  radius="0.04"/>
      </geometry>
    </collision>
  </link>
    <link name="caster_back">
    <visual>
      <geometry>
        <sphere  radius="0.04"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <sphere  radius="0.04"/>
      </geometry>
    </collision>
  </link>


  <!-- Define the joints -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.1 -0.10" rpy="1.570796325 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.1 -0.10" rpy="1.570796325 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>


    <joint name="caster_j1" type="fixed">
    <parent link="base_link"/>
    <child link="caster_front"/>
    <origin xyz="0.12 0 -0.10" />

  </joint>

    <joint name="caster_j2" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back"/>
    <origin xyz="-0.12 0 -0.10" />

  </joint>



</robot>
